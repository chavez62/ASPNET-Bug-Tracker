@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <style>
        .hero-card {
            position: relative;
            overflow: hidden;
            background: linear-gradient(135deg, rgba(20, 184, 166, 0.16), rgba(20, 184, 166, 0.04) 45%, rgba(20, 184, 166, 0.12));
        }

        .hero-card::before,
        .hero-card::after {
            content: "";
            position: absolute;
            width: 320px;
            height: 320px;
            border-radius: 50%;
            background: radial-gradient(circle, rgba(20, 184, 166, 0.35) 0%, rgba(20, 184, 166, 0) 65%);
            pointer-events: none;
        }

        .hero-card::before {
            top: -160px;
            right: -120px;
        }

        .hero-card::after {
            bottom: -180px;
            left: -140px;
        }

        .hero-illustration {
            background: rgba(20, 184, 166, 0.08);
        }

        @@media (min-width: 992px) {
            .hero-illustration {
                transform: translateY(10px);
            }
        }

        @@media (max-width: 767.98px) {
            .hero-card::before,
            .hero-card::after {
                width: 260px;
                height: 260px;
            }
        }
    </style>
}

@if (User?.Identity?.IsAuthenticated == true)
{
    <div class="dashboard-hero rounded-3 p-5 mb-4">
        <div class="container-fluid py-3 position-relative">
            <h1 class="display-5 fw-bold">Welcome Back, @ViewBag.UserDisplayName!</h1>
            <p class="col-md-8 fs-4">Here's your bug tracking overview</p>
            <div class="d-flex gap-2 mt-4">
                <a asp-controller="BugReports" asp-action="Create" class="btn btn-light btn-lg px-4">
                    <i class="bi bi-plus-circle me-2"></i>Report Bug
                </a>
                <a asp-controller="BugReports" asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                    <i class="bi bi-list me-2"></i>View All
                </a>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <!-- Total Bugs Card -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-dark bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="bi bi-lightning-charge-fill text-primary fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Total Bugs</h5>
                    </div>
                    <h2 class="display-6 fw-bold text-primary mb-0">@ViewBag.TotalBugs</h2>
                    <p class="text-muted small mb-0">All reported issues</p>
                </div>
            </div>
        </div>

        <!-- Open Bugs Card -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-warning bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="bi bi-exclamation-circle-fill text-warning fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Open</h5>
                    </div>
                    <h2 class="display-6 fw-bold text-warning mb-0">@ViewBag.OpenBugs</h2>
                    <p class="text-muted small mb-0">Awaiting action</p>
                </div>
            </div>
        </div>

        <!-- In Progress Card -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="bi bi-gear-fill text-info fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">In Progress</h5>
                    </div>
                    <h2 class="display-6 fw-bold text-info mb-0">@ViewBag.InProgressBugs</h2>
                    <p class="text-muted small mb-0">Currently working</p>
                </div>
            </div>
        </div>

        <!-- Resolved Card -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-success bg-opacity-10 p-3 rounded-3 me-3">
                            <i class="bi bi-check-circle-fill text-success fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0">Resolved</h5>
                    </div>
                    <h2 class="display-6 fw-bold text-success mb-0">@ViewBag.ResolvedBugs</h2>
                    <p class="text-muted small mb-0">Successfully fixed</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="card row mb-4">
        <div class="col-12">
            <div class="border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <h5 class="mb-0">Recent Activity</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Status</th>
                                    <th>Severity</th>
                                    <th>Updated</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var bug in ViewBag.RecentBugs ?? Enumerable.Empty<BugReport>())
                                {
                                    <tr>
                                        <td>#@bug.Id</td>
                                        <td>@bug.Title</td>
                                        <td>
                                            <span class="badge bg-@(bug.Status switch {
                    Status.Open => "warning",
                    Status.InProgress => "info",
                    Status.Resolved => "success",
                    _ => "secondary"
                })">@bug.Status</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-@(bug.Severity switch { 
                    Severity.Critical => "danger",
                    Severity.High => "warning",
                    Severity.Medium => "info",
                    Severity.Low => "secondary",
                    _ => "secondary"
                })">@bug.Severity</span>
                                        </td>
                                        <td>@bug.CreatedDate.ToString("MMM dd, yyyy")</td>  <!-- Changed UpdatedAt to CreatedDate  -->
                                        <td>
                                            <a asp-controller="BugReports" asp-action="Details" asp-route-id="@bug.Id"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <section class="py-5">
        <div class="container">
            <div class="hero-card rounded-4 shadow-sm px-4 px-md-5 py-5 text-center text-lg-start">
                <div class="row g-4 align-items-center">
                    <div class="col-lg-6">
                        <div class="d-inline-flex align-items-center bg-white bg-opacity-75 text-dark fw-semibold rounded-pill px-3 py-1 mb-3">
                            <i class="bi bi-lightning-charge-fill me-2" style="color:#0f766e;"></i>
                            <span>Ship fixes faster</span>
                        </div>
                        <h1 class="display-5 fw-semibold text-dark mb-3">Welcome to Bug Tracker</h1>
                        <p class="lead text-muted mb-4">Track, manage, and resolve software issues efficiently with our comprehensive bug tracking system.</p>
                        <div class="d-flex flex-column flex-sm-row gap-2 align-items-sm-center justify-content-sm-start justify-content-center">
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg px-4 rounded-3 shadow-sm">Get Started</a>
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-secondary btn-lg px-4 rounded-3">Sign In</a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="hero-illustration rounded-4 p-4 p-md-5 h-100">
                            <ul class="list-unstyled mb-0">
                                <li class="d-flex align-items-start mb-4">
                                    <div class="bg-white rounded-circle p-3 shadow-sm me-3">
                                        <i class="bi bi-kanban fs-4" style="color:#0f766e;"></i>
                                    </div>
                                    <div>
                                        <h6 class="fw-semibold mb-1">Pipeline at a glance</h6>
                                        <small class="text-muted">Monitor open, in-progress, and resolved work from a central view.</small>
                                    </div>
                                </li>
                                <li class="d-flex align-items-start mb-4">
                                    <div class="bg-white rounded-circle p-3 shadow-sm me-3">
                                        <i class="bi bi-graph-up fs-4" style="color:#0f766e;"></i>
                                    </div>
                                    <div>
                                        <h6 class="fw-semibold mb-1">Insights that matter</h6>
                                        <small class="text-muted">Surface trends and severity spikes before they impact releases.</small>
                                    </div>
                                </li>
                                <li class="d-flex align-items-start">
                                    <div class="bg-white rounded-circle p-3 shadow-sm me-3">
                                        <i class="bi bi-people fs-4" style="color:#0f766e;"></i>
                                    </div>
                                    <div>
                                        <h6 class="fw-semibold mb-1">Collaboration ready</h6>
                                        <small class="text-muted">Give developers, QA, and stakeholders a shared workspace.</small>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}