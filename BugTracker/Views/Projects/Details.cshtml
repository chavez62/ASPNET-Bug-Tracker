@model BugTracker.Models.Project
@using BugTracker.Models.Enums

@{
    ViewData["Title"] = Model?.Name ?? "Project Details";
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Projects</a></li>
            <li class="breadcrumb-item active">@(Model?.Name ?? "Project Details")</li>
        </ol>
    </nav>

    @if (Model == null)
    {
        <div class="alert alert-danger">
            Project not found or you don't have access to this project.
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-md-8">
                <h1 class="mb-3">@Model.Name</h1>
                <p class="text-muted">@Model.Description</p>
            </div>
            <div class="col-md-4 text-end">
                <div class="btn-group">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit Project
                        </a>
                    }
                    <a asp-controller="BugReports" asp-action="Create"
                       asp-route-projectId="@Model.Id"
                       class="btn btn-outline-primary">
                        <i class="bi bi-plus"></i> New Bug
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Project Info -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Project Details</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Status</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-@(Model.Status.ToString().ToLower())">
                                    @Model.Status
                                </span>
                            </dd>

                            <dt class="col-sm-4">Manager</dt>
                            <dd class="col-sm-8">
                                @if (Model.Manager != null)
                                {
                                    <span>@Model.Manager.FirstName @Model.Manager.LastName</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not assigned</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Start Date</dt>
                            <dd class="col-sm-8">@Model.StartDate.ToString("MMM dd, yyyy")</dd>

                            @if (Model.EndDate.HasValue)
                            {
                                <dt class="col-sm-4">End Date</dt>
                                <dd class="col-sm-8">@Model.EndDate.Value.ToString("MMM dd, yyyy")</dd>
                            }
                        </dl>
                    </div>
                </div>

                <!-- Bug Statistics -->
                @if (ViewBag.BugStatistics != null)
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Bug Statistics</h5>
                        </div>
                        <div class="card-body">
                            @{
                                var stats = ViewBag.BugStatistics as Dictionary<Status, int>;
                                var total = stats?.Values.Sum() ?? 0;
                            }
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="p-3 border rounded text-center">
                                        <h3 class="mb-1">@total</h3>
                                        <small class="text-muted">Total Bugs</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 border rounded text-center">
                                        <h3 class="mb-1">@(stats?[Status.Open] ?? 0)</h3>
                                        <small class="text-muted">Open</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 border rounded text-center">
                                        <h3 class="mb-1">@(stats?[Status.InProgress] ?? 0)</h3>
                                        <small class="text-muted">In Progress</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 border rounded text-center">
                                        <h3 class="mb-1">@(stats?[Status.Resolved] ?? 0)</h3>
                                        <small class="text-muted">Resolved</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Team Members -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Team Members</h5>
                        <span class="badge bg-primary">@(Model.TeamMembers?.Count ?? 0)</span>
                    </div>
                    <div class="card-body">
                        @if (Model.TeamMembers == null || !Model.TeamMembers.Any())
                        {
                            <p class="text-muted text-center mb-0">No team members assigned</p>
                        }
                        else
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var member in Model.TeamMembers)
                                {
                                    <li class="mb-2 d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-person-circle me-2"></i>
                                            <span>@member.FirstName @member.LastName</span>
                                        </div>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <form asp-action="RemoveTeamMember" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="projectId" value="@Model.Id" />
                                                <input type="hidden" name="userId" value="@member.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Remove this team member?')">
                                                    <i class="bi bi-x"></i>
                                                </button>
                                            </form>
                                        }
                                    </li>
                                }
                            </ul>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <hr />
                            <form asp-action="AddTeamMember" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="projectId" value="@Model.Id" />
                                <div class="input-group">
                                    <select name="userId" class="form-select" asp-items="ViewBag.Users">
                                        <option value="">-- Select User --</option>
                                    </select>
                                    <button type="submit" class="btn btn-outline-primary">Add</button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>

            <!-- Bug Reports -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Bug Reports</h5>
                        <span class="badge bg-secondary">@(Model.BugReports?.Count ?? 0)</span>
                    </div>
                    <div class="card-body">
                        @if (Model.BugReports == null || !Model.BugReports.Any())
                        {
                            <p class="text-center text-muted my-4">
                                No bug reports found for this project.
                            </p>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Title</th>
                                            <th>Status</th>
                                            <th>Severity</th>
                                            <th>Assigned To</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var bug in Model.BugReports)
                                        {
                                            <tr>
                                                <td>#@bug.Id</td>
                                                <td>@bug.Title</td>
                                                <td>
                                                    <span class="badge bg-@bug.Status.ToString().ToLower()">
                                                        @bug.Status
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-@bug.Severity.ToString().ToLower()">
                                                        @bug.Severity
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (bug.AssignedTo != null)
                                                    {
                                                        @($"{bug.AssignedTo.FirstName} {bug.AssignedTo.LastName}")
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Unassigned</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a asp-controller="BugReports" asp-action="Details"
                                                       asp-route-id="@bug.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Initialize any required JavaScript functionality
        $(document).ready(function() {
            // Add any necessary initialization code here
        });
    </script>
}