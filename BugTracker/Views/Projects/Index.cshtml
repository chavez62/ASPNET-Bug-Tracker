@model IEnumerable<Project>
@{
    ViewData["Title"] = "Projects";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Projects</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Project
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">No Projects Found</h4>
            <p>There are currently no projects available. @(User.IsInRole("Admin") ? "Click the 'New Project' button to create one." : "")</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
            @foreach (var project in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-3">
                                <a asp-action="Details" asp-route-id="@project.Id"
                                   class="text-decoration-none text-dark stretched-link">
                                    @project.Name
                                </a>
                            </h5>
                            <p class="card-text text-muted mb-3">@project.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    @project.TeamMembers.Count member@(project.TeamMembers.Count != 1 ? "s" : "")
                                </small>
                                <div>
                                    <span class="badge bg-primary rounded-pill">
                                        @(project?.BugReports?.Count ?? 0) bugs
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    Started @project.StartDate.ToString("MMM dd, yyyy")
                                </small>
                                <small class="text-muted">
                                    Manager: @(project.Manager?.FirstName ?? project.Manager?.Email)
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>