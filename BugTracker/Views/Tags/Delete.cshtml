@model BugTracker.Models.Tag

@{
    ViewData["Title"] = "Delete Tag";
}

<div class="container-fluid py-4 bg-light">
    <!-- Header Section -->
    <div class="bg-white rounded-lg shadow-sm p-4 mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Tags</a></li>
                <li class="breadcrumb-item active">Delete</li>
            </ol>
        </nav>
        <h1 class="h3 mb-0 text-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>Delete Tag
        </h1>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone. The tag will be removed from all associated bug reports.
                    </div>

                    <p class="mb-4">Are you sure you want to delete this tag?</p>

                    <!-- Tag Preview -->
                    <div class="bg-light p-4 rounded mb-4">
                        <h6 class="mb-3">Tag to be deleted:</h6>
                        <div class="d-flex align-items-center gap-3">
                            <span class="badge" style="background-color: @Model.Color; color: @(Model.Color == "#FFFFFF" || Model.Color == "#ffffff" ? "#000000" : "#FFFFFF"); font-size: 1rem; padding: 0.5rem 0.75rem;">
                                @Model.Name
                            </span>
                            <div>
                                <div><strong>Name:</strong> @Model.Name</div>
                                <div><strong>Color:</strong> @Model.Color</div>
                                <div><strong>Used in:</strong> @Model.BugReports.Count bug report(s)</div>
                            </div>
                        </div>
                    </div>

                    @if (Model.BugReports.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Note:</strong> This tag is currently being used by @Model.BugReports.Count bug report(s). 
                            Deleting this tag will remove it from all associated bug reports.
                        </div>

                        <details class="mb-3">
                            <summary class="btn btn-outline-info btn-sm">
                                <i class="bi bi-list me-2"></i>View affected bug reports
                            </summary>
                            <div class="mt-3">
                                <ul class="list-group">
                                    @foreach (var bug in Model.BugReports.Take(10))
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>#@bug.Id</strong> - @bug.Title
                                            </div>
                                            <span class="badge bg-secondary">@bug.Status</span>
                                        </li>
                                    }
                                    @if (Model.BugReports.Count > 10)
                                    {
                                        <li class="list-group-item text-muted text-center">
                                            ... and @(Model.BugReports.Count - 10) more bug reports
                                        </li>
                                    }
                                </ul>
                            </div>
                        </details>
                    }

                    <form asp-action="Delete" method="post" class="d-flex gap-2">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Yes, Delete Tag
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>

        <!-- Help Card -->
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-question-circle me-2"></i>What happens when I delete?
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-3">
                            <i class="bi bi-dash-circle text-danger me-2"></i>
                            The tag will be permanently removed
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-dash-circle text-warning me-2"></i>
                            Tag will be removed from all bug reports
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-dash-circle text-info me-2"></i>
                            Bug reports will remain unchanged otherwise
                        </li>
                        <li>
                            <i class="bi bi-dash-circle text-secondary me-2"></i>
                            This action cannot be undone
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>