@model BugTracker.Models.Tag

@{
    ViewData["Title"] = "Tag Details";
}

@section Styles {
    <style>
        .breadcrumb-modern {
            padding: .75rem 1.1rem;
            background: var(--bs-body-bg);
            border-radius: .9rem;
            border: 1px solid var(--bs-border-color-translucent, rgba(15, 23, 42, 0.08));
            box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.5);
        }

        .breadcrumb-modern .breadcrumb-item+.breadcrumb-item::before {
            color: var(--bs-secondary-color);
            content: '>';
            margin-right: .6rem;
            margin-left: .4rem;
        }

        .breadcrumb-modern .breadcrumb-link {
            display: inline-flex;
            align-items: center;
            gap: .4rem;
            text-decoration: none;
            color: inherit;
            font-weight: 500;
        }

        .breadcrumb-modern .breadcrumb-link:hover,
        .breadcrumb-modern .breadcrumb-link:focus {
            color: var(--bs-primary);
        }

        .breadcrumb-modern .breadcrumb-item.active {
            color: var(--bs-primary);
            font-weight: 600;
        }

        .breadcrumb-pill {
            display: inline-flex;
            align-items: center;
            gap: .4rem;
            padding: .3rem .85rem;
            border-radius: 999px;
            background: rgba(15, 23, 42, 0.03);
            border: 1px solid var(--bs-border-color-translucent, rgba(15, 23, 42, 0.08));
            font-weight: 500;
            color: var(--bs-secondary-color);
        }

        .breadcrumb-pill i {
            color: var(--bs-primary);
        }
    </style>
}

<div class="container-fluid py-4 bg-light">
    <!-- Header Section -->
    <div class="bg-white rounded-lg shadow-sm p-4 mb-4">
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb breadcrumb-modern align-items-center mb-0">
                <li class="breadcrumb-item">
                    <a href="/" class="breadcrumb-link">
                        <i class="bi bi-house"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="Index" class="breadcrumb-link">
                        <i class="bi bi-tags"></i>
                        <span>Tags</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="breadcrumb-pill">
                        <i class="bi bi-eye"></i>
                        Details
                    </span>
                </li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0 d-flex align-items-center">
                <span class="badge me-3"
                    style="background-color: @Model.Color; color: @(Model.Color == "#FFFFFF" || Model.Color == "#ffffff" ? "#000000" : "#FFFFFF"); font-size: 1rem; padding: 0.5rem 0.75rem;">
                    @Model.Name
                </span>
                Tag Details
            </h1>
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                    <i class="bi bi-pencil me-2"></i>Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger"
                    onclick="return confirm('Are you sure you want to delete this tag?')">
                    <i class="bi bi-trash me-2"></i>Delete
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Tag Info -->
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Tag Information
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Color:</dt>
                        <dd class="col-sm-8">
                            <div class="d-flex align-items-center gap-2">
                                <span class="badge"
                                    style="background-color: @Model.Color; color: @(Model.Color == "#FFFFFF" || Model.Color == "#ffffff" ? "#000000" : "#FFFFFF");">
                                    @Model.Color
                                </span>
                                <code>@Model.Color</code>
                            </div>
                        </dd>

                        <dt class="col-sm-4">Bug Reports:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Model.BugReports.Count</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Associated Bug Reports -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-bug me-2"></i>Associated Bug Reports (@Model.BugReports.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.BugReports.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Title</th>
                                        <th>Status</th>
                                        <th>Severity</th>
                                        <th>Assigned To</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bug in Model.BugReports.OrderByDescending(b => b.CreatedDate))
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-light text-dark">#@bug.Id</span>
                                            </td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 200px;" title="@bug.Title">
                                                    @bug.Title
                                                </div>
                                            </td>
                                            <td>
                                                <span
                                                    class="badge 
                                                            @(bug.Status == BugTracker.Models.Enums.Status.Open ? "bg-danger" :
                                                                                                                    bug.Status == BugTracker.Models.Enums.Status.InProgress ? "bg-warning" :
                                                                                                                    bug.Status == BugTracker.Models.Enums.Status.UnderReview ? "bg-info" :
                                                                                                                    bug.Status == BugTracker.Models.Enums.Status.Resolved ? "bg-success" : "bg-secondary")">
                                                    @bug.Status
                                                </span>
                                            </td>
                                            <td>
                                                <span
                                                    class="badge 
                                                            @(bug.Severity == BugTracker.Models.Enums.Severity.Critical ? "bg-danger" :
                                                                                                                    bug.Severity == BugTracker.Models.Enums.Severity.High ? "bg-warning" :
                                                                                                                    bug.Severity == BugTracker.Models.Enums.Severity.Medium ? "bg-info" : "bg-secondary")">
                                                @bug.Severity
                                            </span>
                                        </td>
                                        <td>
                                        @if (bug.AssignedTo != null)
                                                {
                                                    <small>@bug.AssignedTo.UserName</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">Unassigned</small>
                                                }
                                            </td>
                                            <td>
                                                <small title="@bug.CreatedDate.ToString("F")">
                                                    @bug.CreatedDate.ToString("MMM dd, yyyy")
                                                </small>
                                            </td>
                                            <td>
                                                <a asp-controller="BugReports" asp-action="Details" asp-route-id="@bug.Id"
                                                    class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-bug display-4 text-muted mb-3"></i>
                            <h6 class="text-muted">No Bug Reports</h6>
                            <p class="text-muted mb-0">This tag hasn't been used in any bug reports yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex gap-2 mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil me-2"></i>Edit Tag
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>