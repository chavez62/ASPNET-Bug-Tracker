@model IEnumerable<BugTracker.Models.Tag>

@{
    ViewData["Title"] = "Tags";
}

<div class="container-fluid py-4 bg-light">
    <!-- Header Section -->
    <div class="bg-white rounded-lg shadow-sm p-4 mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
                <li class="breadcrumb-item active">Tags</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">Tag Management</h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Create New Tag
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tags List -->
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var tag in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <span class="badge me-3" style="background-color: @tag.Color; color: @(tag.Color == "#FFFFFF" || tag.Color == "#ffffff" ? "#000000" : "#FFFFFF"); font-size: 0.9rem; padding: 0.5rem 0.75rem;">
                                    @tag.Name
                                </span>
                                <small class="text-muted">@tag.BugReports.Count bug(s)</small>
                            </div>
                            
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@tag.Id" class="btn btn-sm btn-outline-info flex-fill">
                                    <i class="bi bi-eye me-1"></i>View
                                </a>
                                <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@tag.Id" class="btn btn-sm btn-outline-danger flex-fill"
                                   onclick="return confirm('Are you sure you want to delete this tag?')">
                                    <i class="bi bi-trash me-1"></i>Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-tags display-1 text-muted mb-4"></i>
                        <h4 class="text-muted">No Tags Found</h4>
                        <p class="text-muted mb-4">Get started by creating your first tag to categorize bug reports.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Create First Tag
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>