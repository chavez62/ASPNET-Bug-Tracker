{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=BugTracker.db"
  },
  "FileStorage": {
    "Path": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "FileUpload": {
    "MaxFileSize": 5242880, // 5MB in bytes
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".pdf", ".txt", ".log" ],
    "UploadDirectory": "uploads"
  },
  "Mail": {
    "From": "noreply@bugtracker.com",
    "SmtpServer": "smtp.yourserver.com",
    "Port": 587,
    "Username": "your-smtp-username",
    "Password": "your-smtp-password",
    "EnableSsl": true
  },
  "Authentication": {
    "RequireConfirmedAccount": true,
    "Password": {
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true,
      "RequiredLength": 8
    },
    "Lockout": {
      "MaxFailedAccessAttempts": 5,
      "DefaultLockoutTimeSpanInMinutes": 15
    }
  },
  "Application": {
    "Name": "Bug Tracker",
    "AdminEmail": "admin@bugtracker.com",
    "SupportEmail": "support@bugtracker.com",
    "PageSize": 10,
    "EnableApiAuthentication": true
  }
}